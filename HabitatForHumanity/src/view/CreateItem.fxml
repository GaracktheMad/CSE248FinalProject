<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CreateItemController">
   <children>
      <HBox spacing="20.0">
         <children>
            <Label text="Name" />
            <TextField fx:id="nameField" editable="false" />
         </children>
      </HBox>
      <HBox layoutX="20.0" layoutY="20.0" spacing="25.0">
         <children>
            <Label text="Price" />
            <TextField fx:id="priceField" editable="false" />
         </children>
      </HBox>
      <HBox layoutX="20.0" layoutY="20.0" spacing="20.0">
         <children>
            <Label text="Image" />
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
            <Button fx:id="imageBtn" mnemonicParsing="false" onAction="#selectImage" text="Select Image" />
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Button fx:id="submitBtn" defaultButton="true" mnemonicParsing="false" onAction="#submit" text="Submit" />
            <Button fx:id="cancelBtn" cancelButton="true" mnemonicParsing="false" onAction="#cancel" text="Cancel" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
