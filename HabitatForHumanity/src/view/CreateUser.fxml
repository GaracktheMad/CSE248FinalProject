<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CreateUserController">
   <children>
      <VBox alignment="CENTER" spacing="16.0">
         <children>
            <Label fx:id="errorLbl" alignment="CENTER" contentDisplay="CENTER" textAlignment="CENTER" textFill="#da1717">
      </Label>
            <HBox alignment="CENTER" spacing="32.0">
               <children>
                  <Label text="Email" />
                  <TextField fx:id="nameField" />
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="20.0" layoutY="20.0" spacing="12.0">
               <children>
                  <Label text="Password" />
                  <PasswordField fx:id="passField" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="34.0">
               <children>
                  <Label text="Rank" />
                  <ComboBox fx:id="rankCombo" prefWidth="150.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="48.0">
               <children>
                  <Label text="ID" />
                  <TextField fx:id="idField" editable="false" promptText="Keep Blank" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Button fx:id="submitBtn" defaultButton="true" mnemonicParsing="false" onAction="#submit" text="Submit" />
                  <Button fx:id="returnBtn" cancelButton="true" mnemonicParsing="false" onAction="#returnHome" text="Return" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</StackPane>
