<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefWidth="450.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <HBox spacing="5.0">
               <children>
                  <Label text="Name" />
                  <TextField />
               </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="10.0" spacing="5.0">
               <children>
                  <Label layoutX="10.0" layoutY="10.0" text="ID Code" />
                  <TextField layoutX="38.0" layoutY="10.0" />
               </children>
            </HBox>
            <HBox spacing="5.0">
               <children>
                  <Label text="Price" />
                  <TextField />
               </children>
            </HBox>
            <HBox spacing="5.0">
               <children>
                  <Label text="Donor Name" />
                  <TextField />
               </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="160.0" spacing="5.0">
               <children>
                  <Label text="Donor Address" />
                  <TextField />
               </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="130.0" spacing="5.0">
               <children>
                  <Label text="Donor Phone" />
                  <TextField prefWidth="100.0" />
                  <TextField layoutX="81.0" layoutY="10.0" prefWidth="100.0" />
                  <TextField layoutX="41.0" layoutY="10.0" prefWidth="125.0" />
               </children>
            </HBox>
            <Button mnemonicParsing="false" text="Change Photo" />
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </VBox>
   </center>
   <bottom>
      <HBox nodeOrientation="RIGHT_TO_LEFT" BorderPane.alignment="BOTTOM_RIGHT">
         <children>
            <Button alignment="BOTTOM_RIGHT" mnemonicParsing="false" text="Save" />
            <Button cancelButton="true" mnemonicParsing="false" text="Cancel" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
