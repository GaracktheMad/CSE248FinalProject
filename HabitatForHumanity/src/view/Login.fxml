<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane prefHeight="350.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox alignment="BASELINE_CENTER" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="BASELINE_CENTER" prefHeight="50.0" prefWidth="200.0">
               <children>
                  <Label text="Username" />
                  <TextField />
               </children>
            </HBox>
            <HBox alignment="BASELINE_CENTER" prefHeight="50.0" prefWidth="200.0">
               <children>
                  <Label text="Password" />
                  <PasswordField />
               </children>
            </HBox>
            <HBox alignment="BOTTOM_CENTER" prefHeight="50.0" prefWidth="200.0">
               <children>
                  <Button alignment="CENTER" mnemonicParsing="false" text="Submit" />
                  <Button mnemonicParsing="false" text="Cancel" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
